#!/bin/bash

mkdir -p config || exit
cd config || exit

echo "$BATCH_SIZE" > batch.config


#REPLICAS_SAFE_CLUSTER_IPS="10.11.12.1 10.11.12.2 10.11.12.3 10.11.12.4"
#REPLICAS_COP_CLUSTER_IPS="192.168.85.24 192.168.85.25 192.168.85.26 192.168.85.27"

#REPLICAS_SAFE_CLUSTER_IPS="192.168.85.24 192.168.85.25 192.168.85.26 192.168.85.27"
REPLICAS_SAFE_CLUSTER_IPS="127.0.0.1 127.0.0.1 127.0.0.1 127.0.0.1"

#The replica IPs for each cluster
REPLICAS=("$REPLICAS_SAFE_CLUSTER_IPS" "$REPLICAS_COP_CLUSTER_IPS")

#10gbe
#CLIENT_MACHINES="10.11.12.5 192.168.70.16"

#1gbe
CLIENT_MACHINES="127.0.0.1"

#Get the correct replica IPs to connect
if [[ -v CLUSTER ]]; then
  if [[ $CLUSTER == "1" ]]; then
    #Flag to set on the machines in the cop cluster
    REPLICA_MACHINES=${REPLICAS[$CLUSTER]}
  else
    #No more clusters
    REPLICA_MACHINES=${REPLICAS[0]}
  fi
else
  CLUSTER=0
  REPLICA_MACHINES=${REPLICAS[$CLUSTER]}
fi

REPLICA_MACHINES=($(echo "$REPLICA_MACHINES" | tr " " "\n"))

if [[ ! -v MAX_CLIENTS ]]; then
  MAX_CLIENTS=$NUM_CLIENTS
fi

LINE_COUNT=$(wc -l < clients.config)

# If that checks if LINE_COUNT is a number, if so check if it is above or equal to $CLIENT_GEN and if so not execute the following block
if [[ $LINE_COUNT =~ ^[0-9]+$ ]] && [[ $LINE_COUNT -ge $CLIENT_GEN ]]; then
  echo "clients.config already exists and has $LINE_COUNT lines, not generating new clients"
else
    rm -f clients.config
    #Replicas have all IPS stored
    CURR_MACHINE=0
    TO_GEN_PER_MACHINE=$(expr $CLIENT_GEN / ${#CLIENT_MACHINES[@]})
    for ip in "${CLIENT_MACHINES[@]}"; do
      FIRST_CLI="$(expr 1000 \* "$(expr $CURR_MACHINE + 1)")"
      for i in $(seq 0 $(expr "$TO_GEN_PER_MACHINE" - 1)); do
        id=$(expr $FIRST_CLI + "$i")
        sni=cli${id}
        port=$(expr 10000 + "$id")
        echo "$id" "$sni" "$ip" "$port" >> clients.config
      done

      CURR_MACHINE=$(expr $CURR_MACHINE + 1)
    done
fi
